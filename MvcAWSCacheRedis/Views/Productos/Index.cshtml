@model IEnumerable<MvcAWSCacheRedis.Models.Productos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h2>@TempData["MENSAJE"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
         
           
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
               <img src="@item.Imagen" style="width:300px;height:200px" />
            </td>
            <td>
                <a asp-controller="Productos" asp-action="SeleccionarFavorito" asp-route-id="@item.IdProducto">Favoritos</a>|
                @Html.ActionLink("Details", "Details", new { id=item.IdProducto }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
